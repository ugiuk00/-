<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org./DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.membermybatis.repository.MemberMyBatisRepository">
    <insert id="save" parameterType="MemberEntity" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into members
            (name)
        values
            (#{name})
    </insert>

    <select id="findAll" resultType="MemberEntity">
        select
            *
        from
            members
    </select>
    
    <select id="findById" parameterType="Long" resultType="Member">
        select
            *
        from
            member
        where
            id= #{id}
    </select>
    
    <select id="findByName" parameterType="String" resultType="Member">
        select
            *
        from
            member
        where
            name = #{name}
    </select>
</mapper>